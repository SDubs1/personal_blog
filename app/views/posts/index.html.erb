<h1>All Posts</h1>

<!-- Loop through each post in the @posts instance variable -->
<% @posts.each do |post| %>
  <h2><%= post.title %></h2>

  <p><%= post.content %></p>

  <%= link_to 'View Post', post_path(post) %>

  <%= link_to 'Edit', edit_post_path(post) %>

  <!-- Add a data-turbo-method attribute to the delete link -->
  <%= link_to 'Delete', post_path(post), data: { turbo_method: :delete, confirm: 'Are you sure?' } %>

  <hr>
<% end %>

<%= link_to 'New Post', new_post_path %>
